    <componentList>
        <component>
            <name>windowsdrivers</name>
            <description>Windows Drivers</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Windows Drivers</description>
                    <destination>${installdir}</destination>
                    <name>windows_drivers</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/windows_drivers</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
            </folderList>
            <postInstallationActionList>
                <runProgram>
                    <abortOnError>0</abortOnError>
                    <explanation>Installing windows drivers for Robox</explanation>
                    <program>${installdir}\windows_drivers\dpinst_x86.exe</program>
                    <programArguments></programArguments>
                    <progressText>Installing windows drivers for Robox</progressText>
                    <showMessageOnError>0</showMessageOnError>
                    <ruleList>
                        <platformTest>
                            <type>windows-x86</type>
                        </platformTest>
                    </ruleList>
                </runProgram>
                <runProgram>
                    <abortOnError>0</abortOnError>
                    <explanation>Installing windows drivers for Robox</explanation>
                    <program>${installdir}\windows_drivers\dpinst_x64.exe</program>
                    <programArguments></programArguments>
                    <progressText>Installing windows drivers for Robox</progressText>
                    <showMessageOnError>0</showMessageOnError>
                    <ruleList>
                        <platformTest>
                            <type>windows-x64</type>
                        </platformTest>
                    </ruleList>
                </runProgram>
            </postInstallationActionList>
        </component>
        <component>
            <name>Application</name>
            <description>Application</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <allowWildcards>1</allowWildcards>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/robox_r*.bin</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/Commissionator.configFile.xml</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/Macros</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/Filaments</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/PrintProfiles</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/Heads</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>D:/Development/LatestBuilds/Commissionator.jar</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/Commissionator/Macros</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/librxtxSerial.so</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Linux_1_0_9_8391/LeapSDK/lib/x64/LeapPython.so</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Linux_1_0_9_8391/LeapSDK/lib/x64/libLeap.so</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Linux_1_0_9_8391/LeapSDK/lib/x64/libLeapCSharp.so</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Linux_1_0_9_8391/LeapSDK/lib/x64/libLeapJava.so</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/rxtxSerial.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/rxtxSerial64.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/Commissionator-update-windows.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/CommissionatorIcon.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/CommissionatorUninstallIcon.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/jRegistryKey.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Windows_1_0_9_8391/LeapSDK/lib/x86/LeapJava.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Windows_1_0_9_8391/LeapSDK/lib/x86/Leap.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Windows_1_0_9_8391/LeapSDK/lib/x86/LeapCSharp.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Windows_1_0_9_8391/LeapSDK/lib/x86/Leapd.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Windows_1_0_9_8391/LeapSDK/lib/LeapCSharp.NET4.0.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/LeapDeveloperKit/LeapDeveloperKit_Windows_1_0_9_8391/LeapSDK/lib/LeapCSharp.NET3.5.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/librxtxSerial.jnilib</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/Commissionator-update-osx.app</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/libLeap.dylib</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/libLeapCSharp.dylib</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/libLeapJava.dylib</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/CommissionatorIcon.icns</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/CommissionatorUninstallIcon.icns</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/CommissionatorIcon_256x256.png</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Binary files</description>
                    <destination>${installdir}/bin</destination>
                    <name>bin</name>
                    <platforms>all</platforms>
                    <actionList>
                        <changePermissions files="${installdir}/bin/*" permissions="0755"/>
                    </actionList>
                    <distributionFileList>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/bin/RoboxDetector.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>D:/Development/RoboxResources/PrintSoftware/installer/bin/RoboxDetector.mac.sh</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <initializationActionList>
                <setInstallerVariable>
                    <name>java_launcher_jar</name>
                    <value>Commissionator.jar</value>
                </setInstallerVariable>
                <setInstallerVariable>
                    <name>java_launcher_vm_parameters</name>
                    <value>-XX:-OmitStackTraceInFastThrow -Xms512m -Xmx750m -DlibertySystems.configFile=Commissionator.configFile.xml</value>
                    <ruleList>
                        <platformTest>
                            <negate>1</negate>
                            <type>osx</type>
                        </platformTest>
                    </ruleList>
                </setInstallerVariable>
                <setInstallerVariable>
                    <name>java_launcher_vm_parameters</name>
                    <value>-XX:-OmitStackTraceInFastThrow -Xms512m -Xmx750m -DlibertySystems.configFile=Commissionator.configFile.xml -Xdock:icon=${installdir}/CommissionatorIcon_256x256.png -Xdock:name="Commissionator"</value>
                    <ruleList>
                        <platformTest>
                            <type>osx</type>
                        </platformTest>
                    </ruleList>
                </setInstallerVariable>
                <setInstallerVariable>
                    <name>java_launcher_mainClass</name>
                    <value>celtech.roboxconfigurator.RoboxCommissionator</value>
                </setInstallerVariable>
                <setInstallerVariable>
                    <name>java_launcher_binary_name</name>
                    <value>${project.shortName}.${platform_exec_suffix}</value>
                </setInstallerVariable>
                <setInstallerVariable>
                    <name>java_launcher_startmenu_shortcut_name</name>
                    <value>${project.shortName}</value>
                </setInstallerVariable>
            </initializationActionList>
        </component>
        <include>
            <file>D:/Development/RoboxResources/PrintSoftware/projects/java.xml</file>
        </include>
    </componentList>
    <postBuildActionList>
        <runProgram>
            <program>C:\Program Files (x86)\Windows Kits\8.0\bin\x64\signtool</program>
            <programArguments>sign /d "${project.fullName}" /f D:\Development\CELCodeSigningCert.p12 /p bl1nk3r3d /t http://timestamp.verisign.com/scripts/timestamp.dll "${project.outputDirectory}/${project.installerFilename}"</programArguments>
            <ruleList>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
        </runProgram>
    </postBuildActionList>
    <initializationActionList>
        <setInstallerVariable>
            <name>launcherName</name>
            <value>Commissionator</value>
        </setInstallerVariable>
        <setInstallerVariable>
            <name>update_xml_url</name>
            <value>http://downloads.cel-robox.com:8001/14f690bc22c/Commissionator-update.xml</value>
        </setInstallerVariable>
        <setInstallerVariableFromRegEx>
            <name>installerVersionID</name>
            <pattern>\.</pattern>
            <substitution></substitution>
            <text>${product_version}</text>
        </setInstallerVariableFromRegEx>
        <setInstallerVariable>
            <name>windowsDriverDir</name>
            <value>${installdir}/windows_drivers</value>
        </setInstallerVariable>
    </initializationActionList>
    <preInstallationActionList>
        <setInstallerVariable>
            <name>vendor</name>
            <value>CEL</value>
        </setInstallerVariable>
        <setInstallerVariable>
            <name>installdir</name>
            <value>${platform_install_prefix}/${vendor}/${product_shortname}</value>
        </setInstallerVariable>
        <actionGroup>
            <actionList>
                <setInstallerVariable name="allowComponentSelection" value="0"/>
                <setInstallerVariable name="installationType" value="upgrade"/>
                <componentSelection deselect="windowsdrivers">
                    <select></select>
                </componentSelection>
            </actionList>

	<!-- We assume an existing installation if ${installdir} directory exists -->
	<ruleList>
                <fileTest condition="exists" path="${installdir}"/>
            </ruleList>
        </actionGroup>
    </preInstallationActionList>
    <postInstallationActionList>
        <writeFile>
            <path>${installdir}/application.properties</path>
            <text>version = ${project.version}
language = ${installation_language_code}</text>
        </writeFile>
        <writeFile>
            <path>${installdir}/update.ini</path>
            <text>[Update]
url = ${update_xml_url}
version_id = ${installerVersionID}
update_download_location = ${installdir}/
check_for_updates = 1
</text>
        </writeFile>
        <addDirectoriesToUninstaller>
            <addContents>1</addContents>
            <files>${windowsDriverDir}</files>
            <ruleList>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
        </addDirectoriesToUninstaller>
        <addFilesToUninstaller>
            <files>${installdir}/update.ini</files>
        </addFilesToUninstaller>
        <addDirectoriesToUninstaller>
            <addContents>1</addContents>
            <files>${windows_folder_appdata}\${product_fullname}</files>
            <ruleList>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
        </addDirectoriesToUninstaller>
        <runProgram>
            <program>defaults</program>
            <programArguments>write "/${installdir}/${project.shortName}.app/Contents/Info" CFBundleIdentifier com.CEL.${project.shortName}</programArguments>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </runProgram>
        <runProgram>
            <program>defaults</program>
            <programArguments>write "/${installdir}/${project.shortName}.app/Contents/Info" CFBundleName ${project.shortName}</programArguments>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </runProgram>
        <runProgram>
            <program>plutil</program>
            <programArguments>-convert xml1 "${installdir}/${project.shortName}.app/Contents/Info.plist" </programArguments>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </runProgram>
        <actionGroup>
            <actionList>
                <runProgram>
                    <program>defaults</program>

	<!-- The CDATA notation allow escaping a
            block of XML characters -->
	<programArguments>write com.apple.LaunchServices LSHandlers -array-add "&lt;dict&gt;&lt;key&gt;LSHandlerContentTag&lt;/key&gt;
&lt;string&gt;${projectFileExtension}&lt;/string&gt;&lt;key&gt;LSHandlerContentTagClass&lt;/key&gt;
&lt;string&gt;public.filename-extension&lt;/string&gt;&lt;key&gt;LSHandlerRoleAll&lt;/key&gt;
&lt;string&gt;com.CELTech.Commissionator&lt;/string&gt;&lt;/dict&gt;"
           </programArguments>
                    <ruleList>
                        <platformTest>
                            <type>osx</type>
                        </platformTest>
                    </ruleList>
                </runProgram>

	<!-- Restart the launch services to reload the configuration -->
	<runProgram>
                    <program>/System/Library/Frameworks/CoreServices.framework/Versions/A/Frameworks/LaunchServices.framework/Versions/A/Support/lsregister</program>
                    <programArguments>-kill -domain local -domain system -domain user</programArguments>
                    <ruleList>
                        <platformTest>
                            <type>osx</type>
                        </platformTest>
                    </ruleList>
                </runProgram>
            </actionList>
        </actionGroup>
    </postInstallationActionList>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <height>500</height>
    <osxApplicationBundleIcon>D:/Development/RoboxResources/PrintSoftware/installer/CommissionatorIcon.icns</osxApplicationBundleIcon>
    <osxUninstallerApplicationBundleIcon>D:/Development/RoboxResources/PrintSoftware/installer/CommissionatorIcon.icns</osxUninstallerApplicationBundleIcon>
    <outputDirectory>D:/Development/LatestBuilds</outputDirectory>
    <productDisplayIcon>${installdir}/RoboxIcon.ico</productDisplayIcon>
    <productUrlInfoAbout>www.cel-robox.com</productUrlInfoAbout>
    <showFileUnpackingProgress>0</showFileUnpackingProgress>
    <splashScreenDelay>3000</splashScreenDelay>
    <startMenuGroupName>${vendor}</startMenuGroupName>
    <style>custom</style>
    <uninstallerName>Uninstall Commissionator</uninstallerName>
    <vendor>CEL</vendor>
    <width>600</width>
    <windows64bitMode>1</windows64bitMode>
    <windowsExecutableIcon>D:/Development/RoboxResources/PrintSoftware/installer/CommissionatorIcon.ico</windowsExecutableIcon>
    <windowsUninstallerExecutableIcon>D:/Development/RoboxResources/PrintSoftware/installer/CommissionatorUninstallIcon.ico</windowsUninstallerExecutableIcon>
    <finalPageActionList>
        <runProgram>
	<!-- On Mac OS X, use 'open' command for asynchronous launch -->
	<program>open</program>
            <programArguments>${installdir}/${launcherName}.app</programArguments>
            <progressText>Do you want to launch ${product_fullname} now?</progressText>
            <ruleList>
                <platformTest type="osx"/>
            </ruleList>
        </runProgram>
        <runProgram>
	<!-- On Windows, use ampersand for asynchronous launch -->
	<program>${installdir}/${launcherName}.exe</program>
            <programArguments>&amp;</programArguments>
            <progressText>Do you want to launch ${product_fullname} now?</progressText>
            <ruleList>
                <platformTest type="windows"/>
            </ruleList>
        </runProgram>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>

