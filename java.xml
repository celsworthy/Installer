    <!-- folders storing JRE -->
    <folderList>
        <folder>
            <description>Java Runtime - Common</description>
            <destination>${automakerdir}/java</destination>
            <name>java_windows_common</name>
            <platforms>windows</platforms>
            <distributionFileList>
