                        <fileExists path="${automakerdir}/java/lib/sparc/libjsig.so"/>
                    </ruleList>
                </createSymLink>
                <createSymLink linkName="${automakerdir}/java/lib/sparc/libjdgaSUNWafb.so" target="libjdgaSUNWffb.so">
